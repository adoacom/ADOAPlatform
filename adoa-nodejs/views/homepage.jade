                    a.facebook(href='#', title='Facebook')
                      i.fa.fa-facebook
                    a.gplus(href='#', title='Gplus')
                      i.fa.fa-google-plus
                    a.linkedin(href='#', title='linkedin')
                      i.fa.fa-linkedin
                    a.email(href='#', title='email')
                      i.fa.fa-envelope
