block body
  body#home.menu-active(data-smooth-scrolling='1')
    header#top-header
      .center
        a#logo(href='#')
          img(src='/images/logo-header.png', alt='Adoa', title='Adoa', height='70')
        nav#main-nav(role='navigation')
          ul
            li.home
              a.active(href='#home') Home
            li
              a(href='#features') Features
            li
              a(href='#works') Works
            li
              a(href='#team') Team
            li
              a(href='#contact') Contact

    main#content(role='main')

    footer#footer
